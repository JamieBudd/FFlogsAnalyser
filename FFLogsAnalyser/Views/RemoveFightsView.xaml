<UserControl x:Class="FFLogsAnalyser.Views.RemoveFightsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFLogsAnalyser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="TimeLineFights"
                  Background="Transparent"
                  SelectionMode="Single">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Fights}"
                                   Foreground="Black"
                                   Background="{Binding Colour}"/>
                        <CheckBox IsChecked="{Binding IsEnabled}"/>
                        <Button Content="X"
                                Command="{Binding ElementName=TimeLineFights, Path=DataContext.DeleteFight}"
                                CommandParameter="{Binding}"
                                Tag="{Binding SelectedFight}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
