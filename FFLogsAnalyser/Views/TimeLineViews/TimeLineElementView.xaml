<UserControl x:Class="FFLogsAnalyser.Views.TimeLineElementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFLogsAnalyser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30"  d:DesignWidth="220">
    
    <!--Rectangle which displays a buff to be placed in the timeline-->
    <Rectangle Fill="Red"
               HorizontalAlignment="Left"
               Height="30" Stroke="Black"
               VerticalAlignment="Top"
               Width="{Binding BuffTime}"
               Opacity="0.8"/>
</UserControl>
